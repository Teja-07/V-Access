<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7B3FDF"
    tools:context=".practice_page">
    <TextView
        android:id="@+id/smule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gadamer"
        android:text="Smule"
        android:textSize="60dp"
        android:textColor="@color/white"
       android:layout_marginTop="200dp"
        android:textAlignment="center"></TextView>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing Million of songs and make"
        android:layout_below="@+id/smule"
        android:fontFamily="@font/poppins_semibolditalic"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"></TextView>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="friends through music"
        android:layout_below="@+id/text1"
        android:fontFamily="@font/poppins_semibolditalic"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"></TextView>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/pracbg"
        >
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:src="@drawable/fb"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyTextColor"
            android:text="Log in with Facebook"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/pracbg"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/google"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyTextColor"
            android:text="Sign in with google"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/pracbg"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mail"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyTextColor"
            android:text="Sign in with Email"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="20dp"></TextView>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="By selecting one of the account Creation option"
    android:fontFamily="@font/poppins_regular"
    android:textColor="@color/white"
    android:layout_below="@id/linear3"
    android:textSize="16dp"
    android:layout_marginTop="20dp"
    android:textAlignment="center"></TextView>


</RelativeLayout>